---
import { SEO } from "astro-seo";
import Footer from "@components/footer.astro";
import { ViewTransitions } from 'astro:transitions';
import Navbar from "@components/navbar/navbar.astro";
import "@fontsource/inter/variable.css";
import { hash, date } from '../git-info.json';
import dayjs from 'dayjs';
import '@sweetalert2/themes/material-ui/material-ui.css';
import 'animate.css';
import "toastify-js/src/toastify.css"

const dateFormatted = dayjs(date).format("MMMM D, YYYY");

export interface Props {
  title: string;
}

// get latest commit hash and date of commit


const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();

const resolvedImageWithDomain = new URL(
  "/opengraph.jpg",
  Astro.site
).toString();

const { title } = Astro.props;

const makeTitle = title
  ? title + " | " + "OneHwaChong"
  : "OneHwaChong";
---

<!DOCTYPE html>
<html lang="en" data-overlayscrollbars-initialize>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Lora:ital,wght@0,400;0,700;1,400;1,700&family=Fredoka:wght@400;700&family=Lato:ital,wght@0,400;0,700;1,400;1,700&family=Raleway:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Spectral&family=Yrsa:ital,wght@0,400;0,500;0,700;1,500;1,700&display=swap" rel="stylesheet">    <!-- <link rel="preload" as="image" href={src} alt="Hero" /> -->
    <SEO
      title={makeTitle}
      description="The official page for HCI's HSC"
      canonical={canonicalURL}
    />
		<ViewTransitions />
  </head>
	<style is:global>
		button.swal2-styled {
			border-radius: 0.2rem !important;
		}

		.lato {
			font-family: 'Lato', sans-serif;
		}

		.spectral {
			font-family: 'Spectral', serif;
		}

		.yrsa {
			font-family: 'Yrsa', serif;
		}

		.raleway {
			font-family: 'Raleway', sans-serif;
		}

		.fredoka {
			font-family: 'Fredoka', cursive;
		}

		.lora {
			font-family: 'Lora', serif;
		}

		h1,
		h2,
		h3,
		h4,
		h5,
		h6 {
			font-family: 'Lora', serif;
		}
	</style>
	
  <body class="lato" data-overlayscrollbars-initialize>
    <Navbar />
		<div transition:animate="fade">
			<slot />
		</div>
    <Footer gitInfo={{
			hash,
			date: dateFormatted
		}} />
    <style is:global>
      /* Improve Page speed */
      /* https://css-tricks.com/almanac/properties/c/content-visibility/ */
      img {
        content-visibility: auto;
      }
    </style>
		
		<!-- some easter eggs n' stuff -->
		<script>
			import '@components/scripts/konami';
			import supportedBrowsers from '@components/scripts/detectua';
			import Toastify from 'toastify-js'

			if (!supportedBrowsers.test(navigator.userAgent) || navigator?.brave?.isBrave()) {
				// collapsible navbar doesn't work on brave because astro:page-load doesn't trigger for some reason
				console.log("unsupported browser")
				Toastify({
					text: "It seems that you are not using Chrome, Firefox, Safari or Edge. <br/> Certain features may not work as intended.",
					duration: 2500,
					escapeMarkup: false,
					gravity: "bottom",
					position: "right",
					backgroundColor: "#ffa500",
					close: true,
					stopOnFocus: true,
					onClick: function() {
						window.open("https://browsehappy.com/", "_blank");
					}
				}).showToast();
			}
		</script>

		<!-- Cloudflare Web Analytics -->
		<script defer src='https://static.cloudflareinsights.com/beacon.min.js' data-cf-beacon='{"token": "d1f594f00fa7437b9d86022eed34b943"}'></script>
		<!-- End Cloudflare Web Analytics -->
  </body>
</html>
