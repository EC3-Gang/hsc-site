---
import { getCollection } from 'astro:content';
import Layout from '@layouts/Layout.astro';
import Container from '@components/container.astro';
import Sectionhead from '@components/sectionhead.astro';
import InitiativesComponent from '@components/initiatives';


const inits = await getCollection('initiatives', ({ data }) => {
	return !data.draft;
});
---

<Layout title='Events'>
	<Container>
		<Sectionhead>
			<Fragment slot='title'>Initiatives</Fragment>
			<Fragment slot='desc'>View initiatives by the HSC here</Fragment>
		</Sectionhead>
		<InitiativesComponent events={inits} client:load />
	</Container>
</Layout>
