---
import Layout from '@layouts/Layout.astro';
import Container from '@components/container.astro';
import Sectionhead from '@components/sectionhead.astro';
import InitiativesComponent from '@components/Initiatives.tsx';
import { contentfulClient } from '@lib/contentful';
import type { Initiatives } from '@lib/contentful';
import fs from 'fs/promises';


const { items: initiatives } = await contentfulClient.getEntries<Initiatives>({
	content_type: 'initiatives',
});
---

<Layout title='Events'>
	<Container>
		<Sectionhead>
			<Fragment slot='title'>Initiatives</Fragment>
			<Fragment slot='desc'>View initiatives by the HSC here</Fragment>
		</Sectionhead>
		<InitiativesComponent initiatives={initiatives} client:load />
	</Container>
</Layout>
