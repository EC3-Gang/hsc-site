---
import { getCollection } from 'astro:content';
import Layout from '@layouts/Layout.astro';
import Container from '@components/container.astro';
import Sectionhead from '@components/sectionhead.astro';
import EventsComponent from '@components/Events';
import { contentfulClient } from '@lib/contentful';
import type { Events } from '@lib/contentful';


const { items: events } = await contentfulClient.getEntries<Events>({
	content_type: 'events',
});
---

<Layout title='Events'>
	<Container>
		<Sectionhead>
			<Fragment slot='title'>Events</Fragment>
			<Fragment slot='desc'>View upcoming and past events here</Fragment>
		</Sectionhead>
		<EventsComponent events={events} client:load />
	</Container>
</Layout>
