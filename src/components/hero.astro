---
import Link from '@components/ui/link.astro';
import { Icon } from 'astro-icon/components';
import background from '@assets/homebg.jpg';
import { getImage } from 'astro:assets';

const optimizedBackground = await getImage({
	src: background,
	format: 'avif',
});
---

{/* style=`background-image: url('${optimizedBackground.src}'); background-size: cover; background-position: center;` */}
<main
	class="h-screen -mt-20 w-full bg-[#8B2A25] flex justify-center items-center relative overflow-hidden"
>
	<img src=`${optimizedBackground.src}` alt="Hwa Chong Institution" class="absolute inset-0 w-full h-full object-cover object-center z-[1] aspect-video" />
	<div class="flex justify-center items-center flex-col h-full w-full bg-opacity-50 bg-[#000] z-10">
		<h1
			class="text-4xl lg:text-5xl lg:tracking-tight xl:tracking-tighter raleway text-center">
			<span class="horizon text-red-500 nightwind-prevent text-[10rem] md:text-[17rem] xl:text-[27rem] relative -left-4 font-condensed font-black">ONE</span>
			<br />
			<span class="sandiego italic text-[rgb(147,163,184)] relative text-[3rem] md:text-[5rem] xl:text-[7rem] -top-7 md:-top-10 lg:-top-32 font-normal">HwaChong</span>
		</h1>
		<p class="text-lg text-center text-[rgb(147,163,184)] leading-relaxed mb-7 raleway md:text-xl -mt-2 md:-mt-2 lg:-mt-20 w-8/12 alata">
      Showcasing events, online initiatives, and collecting student feedback. A hub for information, communication, and engagement.
		</p>
		<Link href="/about" style='outline' class='border-[rgb(139,139,139)] dark:border-[rgb(139,139,139)] text-[rgb(147,163,184)] hover:text-slate-100 nightwind-prevent'>
			About Us <Icon name="mdi:arrow-right" class="inline-block w-4 h-4 -mt-[0.12rem]" />
		</Link>
	</div>
</main>
