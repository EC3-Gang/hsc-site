---
import Link from '@components/ui/link.astro';
import { Icon } from 'astro-icon/components';
---

<main
	class="h-[36rem]"
	style="background-image: url('/homebg.jpg'); background-size: cover; background-position: center;">
	<div class="flex justify-center items-center flex-col h-full w-full bg-opacity-50 bg-[#000]">
		<h1
			class="text-4xl lg:text-5xl lg:tracking-tight xl:tracking-tighter italic text-[rgb(147,163,184)] raleway">
			<span class="text-red-500 font-bold">One</span><span class="font-light">HwaChong</span>
		</h1>
		<p class="text-xl text-center mt-4 text-[rgb(147,163,184)] leading-relaxed mb-7 w-4/5 lg:w-3/5 xl:w-2/5 raleway">
      Showcasing events, online initiatives, and collecting student feedback. A hub for information, communication, and engagement.
		</p>
		<Link href="/about" style='outline' class='bg-white bg-opacity-0 hover:bg-opacity-30 border-[rgb(139,139,139)] dark:border-[rgb(139,139,139)] text-[rgb(147,163,184)] hover:text-slate-700'>
			About Us <Icon name="mdi:arrow-right" class="inline-block w-4 h-4 -mt-[0.12rem]" />
		</Link>
	</div>
</main>
