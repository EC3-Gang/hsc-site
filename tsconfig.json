{
  "extends": "astro/tsconfigs/base",
	"include": [
		"src/**/*",
		".astro/types.d.ts",
	],
  "compilerOptions": {
		"jsx": "react-jsx",
    "strictNullChecks": true,
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "Node",
    "baseUrl": "src",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
    "paths": {
      "@lib/*": [
        "lib/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@components/*": [
        "components/*"
      ],
      "@layouts/*": [
        "layouts/*"
      ],
      "@assets/*": [
        "assets/*"
      ],
      "@pages/*": [
        "pages/*"
      ],
    }
  }
}